<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.hp.sh.expv3.pc.module.order.dao.PcOrderLogDAO">

	<resultMap type="com.hp.sh.expv3.pc.module.order.entity.PcOrderLog" id="PcOrderLog">
		<result column="order_id" property="orderId" />
		<result column="type" property="type" />
		<result column="trigger_type" property="triggerType" />
		<result column="tx_id" property="txId" />
		<result column="request_id" property="requestId" />
		<result column="user_id" property="userId" />
		<result column="id" property="id" />
		<result column="created" property="created" />
		<result column="modified" property="modified" />
	</resultMap>

	<sql id="Base_Column_List" >
		order_id,type,trigger_type,tx_id,request_id,user_id,id,created,modified
	</sql>

	<sql id="simple_where" >
		<where>
		<if test="orderId!=null"> and order_id=#{orderId}</if>
		<if test="type!=null"> and type=#{type}</if>
		<if test="triggerType!=null"> and trigger_type=#{triggerType}</if>
		<if test="txId!=null"> and tx_id=#{txId}</if>
		<if test="userId!=null"> and user_id=#{userId}</if>
		<if test="id!=null"> and id=#{id}</if>
		<if test="created!=null"> and created=#{created}</if>
		<if test="modified!=null"> and modified=#{modified}</if>
		<if test="keyword!=null and keyword!=''"> and CONCAT(IFNULL(request_id,''),'') like CONCAT('%',#{keyword},'%')</if>	</where>
	</sql>

	<sql id="simple_query" >
		select
			<include refid="Base_Column_List" />
		from pc_order_log
			<include refid="simple_where" />
		<if test="orderBy!=null and orderBy!=''">
			order by ${orderBy} <if test="!asc">desc</if>
		</if>

	</sql>

	<select id="pageQuery" resultMap="PcOrderLog">
		<include refid="simple_query" />
	</select>

	<select id="queryList" resultMap="PcOrderLog">
		<include refid="simple_query" />
	</select>

	<select id="queryOne" resultMap="PcOrderLog">
		<include refid="simple_query" />
	</select>

	<select id="queryCount" resultType="long">
		select 
		<choose>
			<when test="SUM!=null">
				sum(${SUM})
			</when>
			<otherwise>
				count(1)
			</otherwise>
		</choose>
		from pc_order_log
		<include refid="simple_where" />
	</select>

	<select id="findById" resultMap="PcOrderLog">
		select
			<include refid="Base_Column_List" />
		from pc_order_log
			where id=#{id} and and user_id=#{userId}
	</select>

	<select id="exist" resultType="boolean">
		select 
			count(1)
		from 
			pc_order_log
		<include refid="simple_where" />
		limit 1
	</select>


	<insert id="save">
		insert into pc_order_log (
			order_id,type,trigger_type,tx_id,request_id,user_id,id,created,modified
		)values(
			#{orderId},#{type},#{triggerType},#{txId},#{requestId},#{userId},#{id},#{created},#{modified}
		)
	</insert>
	
	<update id="update">
		update 
			pc_order_log
		set 
			order_id=#{orderId},type=#{type},trigger_type=#{triggerType},tx_id=#{txId},request_id=#{requestId},user_id=#{userId},id=#{id},created=#{created},modified=#{modified}
		where 
			id=#{id} and user_id=#{userId}
	</update>

	<!--  -->
	
</mapper>