	<sql id="Base_Column_List" >
		id,account_id,asset,symbol,close_flag,long_flag,margin_mode,leverage,price,order_type,amt,margin_ratio,open_fee_ratio,close_fee_ratio,fee_cost,gross_margin,order_margin,open_fee,close_fee,filled_amt,filled_volume,cancel_amt,close_pos_id,status,time_in_force,trigger_flag,cancel_time,visible_flag,active_flag,create_operator,cancel_operator,remark,client_order_id,user_id,created,modified
	</sql>

	<sql id="simple_where" >
		<where>
		<if test="idList!=null">
		and id in
		<foreach item="item" index="i" collection="idList" open="(" separator="," close=")">
		#{idList[${i}]}
		</foreach>
		</if>
		<if test="accountId!=null"> and account_id=#{accountId}</if>
		<if test="closeFlag!=null"> and close_flag=#{closeFlag}</if>
		<if test="longFlag!=null"> and long_flag=#{longFlag}</if>
		<if test="marginMode!=null"> and margin_mode=#{marginMode}</if>
		<if test="orderType!=null"> and order_type=#{orderType}</if>
		<if test="closePosId!=null"> and close_pos_id=#{closePosId}</if>
		<if test="status!=null"> and status=#{status}</if>
		<if test="timeInForce!=null"> and time_in_force=#{timeInForce}</if>
		<if test="triggerFlag!=null"> and trigger_flag=#{triggerFlag}</if>
		<if test="cancelTime!=null"> and cancel_time=#{cancelTime}</if>
		<if test="visibleFlag!=null"> and visible_flag=#{visibleFlag}</if>
		<if test="activeFlag!=null"> and active_flag=#{activeFlag}</if>
		<if test="userId!=null"> and user_id=#{userId}</if>
		<if test="createdStart!=null"> and created &gt;= #{createdStart}</if>
		<if test="createdEnd!=null"> and created &lt;= #{createdEnd}</if>
		<if test="modifiedStart!=null"> and modified &gt;= #{modifiedStart}</if>
		<if test="modifiedEnd!=null"> and modified &lt;= #{modifiedEnd}</if>
		<if test="keyword!=null and keyword!=''"> and CONCAT(IFNULL(asset,''),IFNULL(symbol,''),IFNULL(create_operator,''),IFNULL(cancel_operator,''),IFNULL(remark,''),IFNULL(client_order_id,''),'') like CONCAT('%',#{keyword},'%')</if>	</where>
	</sql>

	<sql id="simple_query" >
		select
			<include refid="Base_Column_List" />
		from pc_order
			<include refid="simple_where" />
		<if test="orderBy!=null and orderBy!=''">
			order by ${orderBy} <if test="!asc">desc</if>
		</if>

	</sql>

	<select id="pageQuery" resultMap="PcOrder">
		<include refid="simple_query" />
	</select>

	<select id="queryList" resultMap="PcOrder">
		<include refid="simple_query" />
	</select>

	<select id="queryOne" resultMap="PcOrder">
		<include refid="simple_query" />
	</select>

	<select id="queryCount" resultType="long">
		select 
		<choose>
			<when test="SUM!=null">
				sum(${SUM})
			</when>
			<otherwise>
				count(1)
			</otherwise>
		</choose>
		from pc_order
		<include refid="simple_where" />
	</select>

	<select id="findById" resultMap="PcOrder">
		select
			<include refid="Base_Column_List" />
		from pc_order
			where id=#{id}
	</select>

	<select id="exist" resultType="boolean">
		select 
			count(1)
		from 
			pc_order
		<include refid="simple_where" />
		limit 1
	</select>


	<insert id="save">
		<selectKey resultType="long" order="AFTER" keyProperty="id">
			SELECT LAST_INSERT_ID() AS id
		</selectKey>
		insert into pc_order (
			id,account_id,asset,symbol,close_flag,long_flag,margin_mode,leverage,price,order_type,amt,margin_ratio,open_fee_ratio,close_fee_ratio,fee_cost,gross_margin,order_margin,open_fee,close_fee,filled_amt,filled_volume,cancel_amt,close_pos_id,status,time_in_force,trigger_flag,cancel_time,visible_flag,active_flag,create_operator,cancel_operator,remark,client_order_id,user_id,created,modified
		)values(
			#{id},#{accountId},#{asset},#{symbol},#{closeFlag},#{longFlag},#{marginMode},#{leverage},#{price},#{orderType},#{amt},#{marginRatio},#{openFeeRatio},#{closeFeeRatio},#{feeCost},#{grossMargin},#{orderMargin},#{openFee},#{closeFee},#{filledAmt},#{filledVolume},#{cancelAmt},#{closePosId},#{status},#{timeInForce},#{triggerFlag},#{cancelTime},#{visibleFlag},#{activeFlag},#{createOperator},#{cancelOperator},#{remark},#{clientOrderId},#{userId},#{created},#{modified}
		)
	</insert>
	
	<update id="update">
		update 
			pc_order
		set 
			account_id=#{accountId},asset=#{asset},symbol=#{symbol},close_flag=#{closeFlag},long_flag=#{longFlag},margin_mode=#{marginMode},leverage=#{leverage},price=#{price},order_type=#{orderType},amt=#{amt},margin_ratio=#{marginRatio},open_fee_ratio=#{openFeeRatio},close_fee_ratio=#{closeFeeRatio},fee_cost=#{feeCost},gross_margin=#{grossMargin},order_margin=#{orderMargin},open_fee=#{openFee},close_fee=#{closeFee},filled_amt=#{filledAmt},filled_volume=#{filledVolume},cancel_amt=#{cancelAmt},close_pos_id=#{closePosId},status=#{status},time_in_force=#{timeInForce},trigger_flag=#{triggerFlag},cancel_time=#{cancelTime},visible_flag=#{visibleFlag},active_flag=#{activeFlag},create_operator=#{createOperator},cancel_operator=#{cancelOperator},remark=#{remark},client_order_id=#{clientOrderId},user_id=#{userId},created=#{created},modified=#{modified}
		where 
			id=#{id}
	</update>

	<delete id="delete">
        delete from pc_order where id=#{id}
    </delete>

    <delete id="condDelete">
        delete from pc_order
		<include refid="simple_where" />
    </delete>

