<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.hp.sh.expv3.bb.module.position.dao.BBActivePositionDAO">

	<resultMap type="com.hp.sh.expv3.bb.module.position.entity.BBActivePosition" id="PcActivePosition">
		<result column="id" property="id" />
		<result column="user_id" property="userId" />
		<result column="asset" property="asset" />
		<result column="symbol" property="symbol" />
		<result column="long_flag" property="longFlag" />
	</resultMap>

	<sql id="Base_Column_List" >
		id,user_id,asset,symbol,long_flag
	</sql>

	<sql id="simple_where" >
		<where>
			<if test="userId!=null"> and user_id=#{userId}</if>
			<if test="asset!=null and asset!=''"> and asset=#{asset}</if>
			<if test="symbol!=null and symbol!=''"> and symbol=#{symbol}</if>
			<if test="longFlag!=null"> and long_flag=#{longFlag}</if>
		</where>
	</sql>

	<sql id="simple_query" >
		select
			<include refid="Base_Column_List" />
		from bb_active_position
			<include refid="simple_where" />
		<if test="orderBy!=null and orderBy!=''">
			order by ${orderBy} <if test="!asc">desc</if>
		</if>

	</sql>

	<select id="pageQuery" resultMap="PcActivePosition">
		<include refid="simple_query" />
	</select>

	<select id="queryList" resultMap="PcActivePosition">
		<include refid="simple_query" />
	</select>

	<select id="queryOne" resultMap="PcActivePosition">
		<include refid="simple_query" />
	</select>

	<select id="queryCount" resultType="long">
		select 
		<choose>
			<when test="SUM!=null">
				sum(${SUM})
			</when>
			<otherwise>
				count(1)
			</otherwise>
		</choose>
		from bb_active_position
		<include refid="simple_where" />
	</select>

	<select id="findById" resultMap="PcActivePosition">
		select
			<include refid="Base_Column_List" />
		from bb_active_position
			where id=#{id} and user_id=#{userId}
	</select>

	<select id="exist" resultType="long">
		select EXISTS(
			select 
				1
			from 
				bb_active_position
			<include refid="simple_where" />
			limit 1
		)
	</select>

	<insert id="save">
		insert into bb_active_position (
			id,user_id,asset,symbol,long_flag
		)values(
			#{id},#{userId},#{asset},#{symbol},#{longFlag}
		)
	</insert>
	
	<update id="update">
		update 
			bb_active_position
		set 
			id=#{id},user_id=#{userId},asset=#{asset},symbol=#{symbol},long_flag=#{longFlag}
		where 
			id=#{id} and user_id=#{userId}
	</update>

	<delete id="delete">
        delete from bb_active_position where id=#{id} and user_id=#{userId}
    </delete>

    <delete id="condDelete">
        delete from bb_active_position
		<include refid="simple_where" />
    </delete>

	<!--  -->
	
	<select id="queryActivePosIds" resultType="long">
		select 
			id 
		from 
			bb_active_position
		where 
			user_id=#{userId}
			and asset=#{asset}
			and symbol=#{symbol}
			<if test="longFlag!=null"> and long_flag=#{longFlag}</if>
	</select>
	
</mapper>