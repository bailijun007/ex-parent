<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.hp.sh.expv3.bb.module.fail.dao.BBMqMsgDAO">

	<resultMap type="com.hp.sh.expv3.bb.module.fail.entity.BBMqMsg" id="BBMqMsg">
		<result column="id" property="id" />
		<result column="tag" property="tag" />
		<result column="key" property="key" />
		<result column="body" property="body" />
		<result column="method" property="method" />
		<result column="user_id" property="userId" />
		<result column="created" property="created" />
	</resultMap>

	<sql id="Base_Column_List" >
		id,method,tag,key,body,user_id,created
	</sql>

	<sql id="simple_where" >
		<where>
		<if test="id!=null"> and id=#{id}</if>
		<if test="userId!=null"> and user_id=#{userId}</if>
		<if test="created!=null"> and created=#{created}</if>
		<if test="keyword!=null and keyword!=''"> and CONCAT(IFNULL(method,''),IFNULL(tag,''),IFNULL(key,''),IFNULL(body,''),'') like CONCAT('%',#{keyword},'%')</if>	</where>
	</sql>

	<sql id="simple_query" >
		select
			<include refid="Base_Column_List" />
		from bb_mq_msg
			<include refid="simple_where" />
		<if test="orderBy!=null and orderBy!=''">
			order by ${orderBy} <if test="!asc">desc</if>
		</if>

	</sql>

	<select id="pageQuery" resultMap="BBMqMsg">
		<include refid="simple_query" />
	</select>

	<select id="queryList" resultMap="BBMqMsg">
		<include refid="simple_query" />
	</select>

	<select id="queryOne" resultMap="BBMqMsg">
		<include refid="simple_query" />
	</select>

	<select id="queryCount" resultType="long">
		select 
		<choose>
			<when test="SUM!=null">
				sum(${SUM})
			</when>
			<otherwise>
				count(1)
			</otherwise>
		</choose>
		from bb_mq_msg
		<include refid="simple_where" />
	</select>

	<select id="findById" resultMap="BBMqMsg">
		select
			<include refid="Base_Column_List" />
		from bb_mq_msg
			where id=#{id} and user_id=#{userId}
	</select>

	<select id="exist" resultType="boolean">
		select 
			count(1)
		from 
			bb_mq_msg
		<include refid="simple_where" />
		limit 1
	</select>


	<insert id="save">
		<selectKey resultType="long" order="AFTER" keyProperty="id">
			SELECT LAST_INSERT_ID() AS id
		</selectKey>
		insert into bb_mq_msg (
			id,method,tag,key,body,user_id,created
		)values(
			#{id},#{method},#{tag},#{key},#{body},#{userId},#{created}
		)
	</insert>
	
	<update id="update">
		update 
			bb_mq_msg
		set 
			id=#{id},method=#{method},tag=#{tag},key=#{key},body=#{body},user_id=#{userId},created=#{created}
		where 
			id=#{id} and user_id=#{userId}
	</update>

	<delete id="delete">
        delete from bb_mq_msg where id=#{id} and user_id=#{userId}
    </delete>

    <delete id="condDelete">
        delete from bb_mq_msg
		<include refid="simple_where" />
    </delete>

	<!--  -->
	
</mapper>