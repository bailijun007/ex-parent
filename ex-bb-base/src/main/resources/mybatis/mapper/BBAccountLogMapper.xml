<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.hp.sh.expv3.bb.module.log.dao.BBAccountLogDAO">

	<resultMap type="com.hp.sh.expv3.bb.module.log.entity.BBAccountLog" id="BBAccountLog">
		<result column="type" property="type" />
		<result column="user_id" property="userId" />
		<result column="asset" property="asset" />
		<result column="symbol" property="symbol" />
		<result column="ref_id" property="refId" />
		<result column="time" property="time" />
	</resultMap>

	<sql id="Base_Column_List" >
		type,user_id,asset,symbol,ref_id,time
	</sql>

	<sql id="simple_where" >
		<where>
			<if test="type!=null"> and type=#{type}</if>
			<if test="userId!=null"> and user_id=#{userId}</if>
			<if test="refId!=null"> and ref_id=#{refId}</if>
			<if test="time!=null"> and time=#{time}</if>
			<if test="asset!=null and asset!=''"> and asset=#{asset}</if>
			<if test="symbol!=null and symbol!=''"> and symbol=#{symbol}</if>
		</where>
	</sql>

	<sql id="simple_query" >
		select
			<include refid="Base_Column_List" />
		from bb_account_log
			<include refid="simple_where" />
		<if test="orderBy!=null and orderBy!=''">
			order by ${orderBy} <if test="!asc">desc</if>
		</if>

	</sql>

	<select id="pageQuery" resultMap="BBAccountLog">
		<include refid="simple_query" />
	</select>

	<select id="queryList" resultMap="BBAccountLog">
		<include refid="simple_query" />
	</select>

	<select id="queryOne" resultMap="BBAccountLog">
		<include refid="simple_query" />
	</select>

	<select id="queryCount" resultType="long">
		select 
		<choose>
			<when test="SUM!=null">
				sum(${SUM})
			</when>
			<otherwise>
				count(1)
			</otherwise>
		</choose>
		from bb_account_log
		<include refid="simple_where" />
	</select>

	<select id="findById" resultMap="BBAccountLog">
		select
			<include refid="Base_Column_List" />
		from bb_account_log
			where id=#{id}
	</select>

	<select id="exist" resultType="boolean">
		select 
			count(1)
		from 
			bb_account_log
		<include refid="simple_where" />
		limit 1
	</select>


	<insert id="save">
		insert into bb_account_log (
			type,user_id,asset,symbol,ref_id,time
		)values(
			#{type},#{userId},#{asset},#{symbol},#{refId},#{time}
		)
	</insert>
	
	<update id="update">
		update 
			bb_account_log
		set 
			type=#{type},user_id=#{userId},asset=#{asset},symbol=#{symbol},ref_id=#{refId},time=#{time}
		where 
			id=#{id} and user_id=#{userId}
	</update>

	<delete id="delete">
        delete from bb_account_log where id=#{id}
    </delete>

    <delete id="condDelete">
        delete from bb_account_log
		<include refid="simple_where" />
    </delete>

	<!--  -->
	
</mapper>