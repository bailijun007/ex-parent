<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.hp.sh.expv3.bb.module.msg.dao.BBMessageExtDAO">

	<resultMap type="com.hp.sh.expv3.bb.module.msg.entity.BBMessageExt" id="BBMessageExt">
		<result column="msg_id" property="msgId" />
		<result column="tags" property="tags" />
		<result column="keys" property="keys" />
		<result column="msg_body" property="msgBody" />
		<result column="error_info" property="errorInfo" />
		<result column="user_id" property="userId" />
		<result column="asset" property="asset" />
		<result column="symbol" property="symbol" />
		<result column="sort_id" property="sortId" />
		<result column="created" property="created" />
		<result column="status" property="status" />
	</resultMap>

	<sql id="Base_Column_List" >
		msg_id,tags,`keys`,msg_body,error_info,user_id,asset,symbol,sort_id,created,status
	</sql>

	<sql id="simple_where" >
		<where>
		<if test="idList!=null">
		and msg_id in
		<foreach item="item" index="i" collection="idList" open="(" separator="," close=")">
		#{idList[${i}]}
		</foreach>
		</if>
		<if test="userId!=null"> and user_id=#{userId}</if>
		<if test="sortId!=null"> and sort_id=#{sortId}</if>
		<if test="created!=null"> and created=#{created}</if>
		<if test="status!=null"> and status=#{status}</if>
		</where>
	</sql>

	<sql id="simple_query" >
		select
			<include refid="Base_Column_List" />
		from bb_message_ext
			<include refid="simple_where" />
		<if test="orderBy!=null and orderBy!=''">
			order by ${orderBy} <if test="!asc">desc</if>
		</if>

	</sql>

	<select id="pageQuery" resultMap="BBMessageExt">
		<include refid="simple_query" />
	</select>

	<select id="queryList" resultMap="BBMessageExt">
		<include refid="simple_query" />
	</select>

	<select id="queryOne" resultMap="BBMessageExt">
		<include refid="simple_query" />
	</select>

	<select id="queryCount" resultType="long">
		select 
		<choose>
			<when test="SUM!=null">
				sum(${SUM})
			</when>
			<otherwise>
				count(1)
			</otherwise>
		</choose>
		from bb_message_ext
		<include refid="simple_where" />
	</select>

	<select id="findById" resultMap="BBMessageExt">
		select
			<include refid="Base_Column_List" />
		from bb_message_ext
			where msg_id=#{msgId}
	</select>

	<select id="exist" resultType="boolean">
		select 
			count(1)
		from 
			bb_message_ext
		<include refid="simple_where" />
		limit 1
	</select>


	<insert id="save">
		insert into bb_message_ext (
			msg_id,tags,`keys`,msg_body,error_info,user_id,asset,symbol,sort_id,created,status
		)values(
			#{msgId},#{tags},#{keys},#{msgBody},#{errorInfo},#{userId},#{asset},#{symbol},#{sortId},#{created},#{status}
		)
	</insert>
	
	<update id="update">
		update 
			bb_message_ext
		set 
			tags=#{tags},`keys`=#{keys},msg_body=#{msgBody},error_info=#{errorInfo},user_id=#{userId},asset=#{asset},symbol=#{symbol},sort_id=#{sortId},created=#{created},status=#{status}
		where 
			user_id=#{userId} and msg_id=#{msgId}
	</update>

	<delete id="delete">
        delete from bb_message_ext where user_id=#{userId} and msg_id=#{msgId}
    </delete>

    <delete id="condDelete">
        delete from bb_message_ext
		<include refid="simple_where" />
    </delete>

	<!--  -->
	
	<update id="setStatus">
		update 
			bb_message_ext
		set 
			status=#{status},error_info=#{errorInfo}
		where 
			user_id=#{userId} and msg_id=#{msgId}
	</update>
	
</mapper>